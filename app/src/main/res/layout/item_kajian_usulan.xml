<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal upload : "
                android:textColor="#989898"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"/>
            <TextView
                android:id="@+id/tv_tanggal_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Desember 2019"
                android:textColor="#989898"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_user"
                android:layout_width="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/bg_horizontal" />
            <TextView
                android:id="@+id/tv_user"
                android:layout_toRightOf="@id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farid"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/poppins_regular"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_img"
                android:layout_width="100dp"
                android:layout_height="140dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="10dp">
                <ImageView
                    android:id="@+id/iv_pamflet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/cv_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori : tauhid"
                    android:textColor="@android:color/darker_gray"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_judul_kajian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kajian tauhid"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kamis, 20 Desember 2020"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jam 10:30"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
                <TextView
                    android:id="@+id/tv_lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lokasi : Masjid Baiturahman Makassar"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="10sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>